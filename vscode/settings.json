{
    // Font
    "editor.fontSize": 15,
    // Format
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    // Editor UI
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        100,
        120
    ],
    // Files
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true
    },
    // Git
    "git.autofetch": true,
    // Terminal
    "terminal.integrated.fontSize": 15,
    // Theme
    "workbench.colorTheme": "Material Theme",
    "workbench.iconTheme": "eq-material-theme-icons",
    // Workbench
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.startupEditor": "none",
    // Code Spell Dictionary
    "cSpell.userWords": [
        "Erdal",
        "Erdal's",
        "TAŞKESEN",
        "erdaltaskesen",
        "erdaltsksn",
        "dotfiles",
        "devops",
        "backtrace"
    ],
    // Markdownlint
    "markdownlint.config": {
        "MD003": {
            "style": "atx"
        },
        "MD004": {
            "style": "dash"
        },
        "MD010": {
            "code_blocks": false
        },
        "MD013": {
            "line_length": 80,
            "code_blocks": false,
            "tables": false
        },
        "MD024": {
            "siblings_only": true
        },
        "MD026": {
            "punctuation": ",。，；：！？"
        },
        "MD029": {
            "style": "ordered"
        },
        "MD035": {
            "style": "---"
        }
    },
    // Python
    "python.formatting.provider": "black",
    // Golang
    "go.useLanguageServer": true
}
